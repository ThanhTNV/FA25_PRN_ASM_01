@model List<MyRequestViewModel>

@{
    ViewData["Title"] = "My Requests";
}

<h2>My Vehicle Requests</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">You have not submitted any requests yet.</div>
}
else
{
    <table class="table table-bordered table-striped mt-3">
        <thead class="table-light">
            <tr>
                <th>Request ID</th>
                <th>Model Name</th>
                <th>Trim Name</th>
                <th>Model Year</th>
                <th>Requested Qty</th>
                <th>Approved Qty</th>
                <th>Status</th>
                <th>Request Date</th>
                <th>Approval Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.RequestId</td>
                    <td>@request.ModelName</td>
                    <td>@request.TrimName</td>
                    <td>@request.ModelYear</td>
                    <td>@request.RequestQuantity</td>
                    <td>@(request.ApprovedQuantity == 0 ? "-" : request.ApprovedQuantity.ToString())</td>
                    <td>
                        @switch (request.Status?.ToLower())
                        {
                            case "approved":
                                <span class="badge bg-success">Approved</span>
                                break;
                            case "pending":
                                <span class="badge bg-warning text-dark">Pending</span>
                                break;
                            case "rejected":
                                <span class="badge bg-danger">Rejected</span>
                                break;
                            default:
                                <span class="badge bg-secondary">@request.Status</span>
                                break;
                        }
                    </td>
                    <td>@request.RequestDate.ToString("yyyy-MM-dd")</td>
                    <td>@(request.ApprovalDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3 d-flex justify-content-between">
    <a asp-controller="Request" asp-action="Create" class="btn btn-primary">+ New Request</a>
</div>
