@model RequestCreateViewModel

<form asp-controller="Request" asp-action="Create" method="post" class="form-group">
    <div class="mb-3">
        <label asp-for="EvTrimId" class="form-label">Select Vehicle</label>
        <select asp-for="EvTrimId" asp-items="ViewBag.VehicleList" class="form-control">
            <option value="">-- Choose a Vehicle --</option>
        </select>
        <span asp-validation-for="EvTrimId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mt-3 d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Submit Request</button>
        <a asp-controller="Request" asp-action="Index" class="btn btn-primary">My Requests</a>
    </div>
</form>
