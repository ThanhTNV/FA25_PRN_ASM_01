@model IEnumerable<ASM_01.WebApp.Models.VehicleCatalogViewModel>

@{
    ViewData["Title"] = "Vehicle Catalog";
}

<!-- Search Bar -->
<form asp-action="Catalog" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search by model or trim..." value="@Context.Request.Query["searchTerm"]" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<h2>Vehicle Catalog</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@* Top action buttons (only for DISTRIBUTOR) *@
@if (User.IsInRole("DISTRIBUTOR"))
{
    <div class="mb-3 d-flex gap-2">
        <a asp-controller="Vehicle" asp-action="EditModel" class="btn btn-success">Create Model</a>
        <a asp-controller="Vehicle" asp-action="EditTrim" class="btn btn-success">Create Trim</a>
    </div>
}

<form asp-action="Comparison" method="get">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Select</th>
                <th>Model</th>
                <th>Trim</th>
                <th>Price</th>
                <th style="width: 280px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="ids" value="@vehicle.VehicleId" />
                    </td>
                    <td>@vehicle.ModelName</td>
                    <td>@vehicle.TrimName</td>
                    <td>@vehicle.Price.ToString("C")</td>
                    <td class="d-flex flex-wrap gap-2">
                        <a asp-action="Details"
                           asp-route-id="@vehicle.VehicleId"
                           class="btn btn-info btn-sm"
                           type="button">Details</a>

                        @* Row actions (only for DISTRIBUTOR) *@
                        @if (User.IsInRole("DISTRIBUTOR"))
                        {
                            <a asp-controller="Vehicle"
                               asp-action="EditModel"
                               asp-route-modelId="@vehicle.ModelId"
                               class="btn btn-warning btn-sm"
                               type="button">
                                Edit Model Status
                            </a>

                            <a asp-controller="Vehicle"
                               asp-action="EditTrim"
                               asp-route-trimId="@vehicle.VehicleId"
                               class="btn btn-warning btn-sm"
                               type="button">
                                Edit Trim Price
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Compare Selected</button>
</form>
