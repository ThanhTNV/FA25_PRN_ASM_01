@model IEnumerable<ASM_01.WebApp.Models.VehicleCatalogViewModel>

@{
    ViewData["Title"] = "Vehicle Catalog";
}

<!-- Search Bar -->
<form asp-action="Catalog" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search by model or trim..." value="@Context.Request.Query["searchTerm"]" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<h2>Vehicle Catalog</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@* Top action buttons (only for DISTRIBUTOR) *@
@if (User.IsInRole("DISTRIBUTOR"))
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="btn-group">
            <a asp-controller="Vehicle" asp-action="EditModel" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle"></i> Create Model
            </a>
            <a asp-controller="Vehicle" asp-action="EditTrim" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle-dotted"></i> Create Trim
            </a>
        </div>
        <small class="text-muted fst-italic">Distributor Tools</small>
    </div>
}

<form asp-action="Comparison" method="get">
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width: 60px;">Select</th>
                <th>Model</th>
                <th>Trim</th>
                <th>Description</th>
                <th>Status</th>
                <th>Price</th>
                <th style="width: 330px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <td class="text-center">
                        <input type="checkbox" name="ids" value="@vehicle.VehicleId" />
                    </td>
                    <td>@vehicle.ModelName</td>
                    <td>@vehicle.TrimName</td>
                    <td>@(string.IsNullOrWhiteSpace(vehicle.Description) ? "-" : vehicle.Description)</td>

                    <td>
                        @switch (vehicle.Status)
                        {
                            case "Available":
                                <span class="badge bg-success">@vehicle.Status</span>
                                break;
                            case "Unavailable":
                                <span class="badge bg-secondary">@vehicle.Status</span>
                                break;
                            case "Upcoming":
                                <span class="badge bg-warning text-dark">@vehicle.Status</span>
                                break;
                            case "Discontinued":
                                <span class="badge bg-danger">@vehicle.Status</span>
                                break;
                            default:
                                <span class="badge bg-light text-dark">@vehicle.Status</span>
                                break;
                        }
                    </td>

                    <td>@vehicle.Price.ToString("C")</td>

                    <td>
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a asp-action="Details"
                               asp-route-id="@vehicle.VehicleId"
                               class="btn btn-outline-primary btn-sm"
                               data-bs-toggle="tooltip" title="View full details of this vehicle">
                                <i class="bi bi-info-circle"></i> Details
                            </a>

                            @if (User.IsInRole("DISTRIBUTOR"))
                            {
                                <a asp-controller="Vehicle"
                                   asp-action="EditModel"
                                   asp-route-modelId="@vehicle.ModelId"
                                   class="btn btn-outline-warning btn-sm"
                                   data-bs-toggle="tooltip" title="Change model status (Available, Upcoming...)">
                                    <i class="bi bi-gear"></i> Edit Status
                                </a>

                                <a asp-controller="Vehicle"
                                   asp-action="EditTrim"
                                   asp-route-trimId="@vehicle.VehicleId"
                                   class="btn btn-outline-success btn-sm"
                                   data-bs-toggle="tooltip" title="Update price for this trim">
                                    <i class="bi bi-currency-dollar"></i> Edit Price
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3 text-end">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="bi bi-bar-chart"></i> Compare Selected
        </button>
    </div>
</form>
